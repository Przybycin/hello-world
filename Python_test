i = 1
while 1 <=5:
  print(i)
  i = i + 1
  
print("OK")


if 1 + 1 * 3 == 6:
  print("Yes")
else:
  print("No")
  
  // infinite loops //
  
  while 1 == 1:
    print("Make it stop - (Ctrl - C to close the program)!")
    
    /* while loops and the break statement */
    
    i = 0
    while 1 == 1:
      print(i)
      i = i + 1
      if i >= 5:
        print("Breaking")
        break
        
    print("Finished")
    
